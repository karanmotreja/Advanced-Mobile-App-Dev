<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#bcd4e6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="198dp">

        <TextView
            android:id="@+id/titlePage"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:textSize="26dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Add New Gift"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="-25dp"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-130dp"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:orientation="vertical"
        android:background="@drawable/finaldraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        
        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            
            <TextView
                android:id="@+id/addName"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Add Name"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <EditText
                android:id="@+id/editName"
                android:inputType="text"
                android:hint="What's their Name?"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/addGift"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Add Gift"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editGift"
                android:inputType="text"
                android:hint="What did they get you?"
                android:layout_width="match_parent"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/messageText"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Custom Message"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editMessage"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="3"
                android:hint="Type Custom Message Here"
                android:layout_width="match_parent"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/phoneNumber"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Phone Number"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editNumber"
                android:inputType="phone"
                android:hint="Enter Phone Number"
                android:layout_width="match_parent"
                android:layout_height="45dp" />


        </LinearLayout>
        
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Send SMS"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="#9aa2af"
        android:text="Save for Later"
        android:textColor="#FFF"
        android:textSize="22dp" />
    
    
</LinearLayout>